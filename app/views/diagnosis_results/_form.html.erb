<div class="diagnosis-results-form">
  <div class="new-edit">
    <%= form_with(model: @diagnosis_result, local: true) do |f| %>

      <%= f.label :result_type, class: "label-#{yield(:class_text)}" %>
      <%= f.select :result_type, ['左上', '右上', '左側', '右側', '左下', '右下', '輻輳開散'], {include_blank: true}, class: 'form-control', required: true %>

      <%= f.label :result_text, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :result_text, class: 'form-control', required: true %>

      <%= f.label :result_picture, class: "label-#{yield(:class_text)}" %>
      <%= f.file_field :result_picture, class: "form-control" %>

      <%= f.submit yield(:button_text), class: "btn btn-primary btn-lg btn-#{yield(:class_text)}" %>
      <%= link_to "キャンセル", diagnosis_results_path, class: "btn btn-dark btn-lg" %>
    <% end %>
  </div>
</div>  